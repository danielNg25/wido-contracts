{
  "name": "wido-contracts",
  "scripts": {
      "lint": "eslint \"**/*.{js,ts}\" && solhint contracts/**/*.sol",
      "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix contracts/**/*.sol",
      "format": "prettier --check \"**/*.{ts,js,sol}\"",
      "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
      "compile": "hardhat compile",
      "remove-logs": "hardhat remove-logs",
      "void:deploy": "hardhat deploy --report-gas",
      "test": "cross-env HARDHAT_FORK=mainnet HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
      "gas": "cross-env HARDHAT_FORK=mainnet REPORT_GAS=true hardhat test",
      "coverage": "cross-env HARDHAT_FORK=mainnet HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
      "dev:node": "cross-env MINING_INTERVAL=\"3000,5000\" hardhat node --hostname 0.0.0.0",
      "dev": "cross-env MINING_INTERVAL=\"3000,5000\" hardhat node --hostname 0.0.0.0 --watch",
      "local:dev": "hardhat --network localhost deploy --watch",
      "execute": "node ./_scripts.js run",
      "deploy": "node ./_scripts.js deploy",
      "verify": "node ./_scripts.js verify",
      "export": "node ./_scripts.js export",
      "hardhat": "hardhat",
      "fork:execute": "node ./_scripts.js fork:run",
      "fork:deploy": "node ./_scripts.js fork:deploy",
      "fork:dev": "node ./_scripts.js fork:dev",
      "fork:node": "node ./_scripts.js fork:node",
      "fork:test": "node ./_scripts.js fork:test",
      "tenderly:push": "node ./_scripts.js tenderly:push",
      "toolbox": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox"
  },
  "devDependencies": {
      "@chainlink/contracts": "^0.4.0",
      "@layerzerolabs/contracts": "git+https://github.com/LayerZero-Labs/LayerZero.git",
      "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
      "@nomiclabs/hardhat-etherscan": "^3.0.3",
      "@nomiclabs/hardhat-waffle": "^2.0.3",
      "@openzeppelin/contracts": "^4.5.2",
      "@openzeppelin/contracts-upgradeable": "^4.5.2",
      "@openzeppelin/hardhat-upgrades": "^1.17.0",
      "@tenderly/hardhat-tenderly": "^1.1.6",
      "@typechain/ethers-v5": "^10.0.0",
      "@typechain/hardhat": "^6.0.0",
      "@types/chai": "^4.3.1",
      "@types/mocha": "^9.1.0",
      "@types/node": "^17.0.24",
      "@typescript-eslint/eslint-plugin": "^5.19.0",
      "@typescript-eslint/parser": "^5.19.0",
      "@uniswap/lib": "^4.0.1-alpha",
      "@uniswap/v2-core": "^1.0.1",
      "@uniswap/v2-periphery": "^1.1.0-beta.0",
      "@uniswap/v3-core": "^1.0.1",
      "chai": "^4.3.6",
      "chai-ethers": "^0.0.1",
      "cross-env": "^7.0.2",
      "dotenv": "^16.0.0",
      "eslint": "^8.13.0",
      "eslint-config-prettier": "^8.5.0",
      "ethereum-waffle": "^3.4.4",
      "ethers": "^5.6.9",
      "fs-extra": "^10.1.0",
      "hardhat": "^2.9.3",
      "hardhat-contract-sizer": "^2.5.1",
      "hardhat-deploy": "^0.11.10",
      "hardhat-deploy-tenderly": "^0.1.1",
      "hardhat-docgen": "^1.3.0",
      "hardhat-etherscan-abi": "^0.2.0",
      "hardhat-gas-reporter": "^1.0.8",
      "hardhat-log-remover": "^2.0.2",
      "hardhat-preprocessor": "^0.1.4",
      "mocha": "^9.2.2",
      "mochawesome": "^7.1.3",
      "prettier": "^2.7.1",
      "prettier-plugin-solidity": "^1.0.0-beta.19",
      "solhint": "^3.3.7",
      "solhint-plugin-prettier": "^0.0.5",
      "solidity-coverage": "^0.7.20",
      "solmate": "^6.6.1",
      "ts-generator": "^0.1.1",
      "ts-node": "^10.7.0",
      "typechain": "^8.0.0",
      "typescript": "^4.6.3",
      "wido": "^0.0.11",
      "yarn-upgrade-all": "^0.7.1"
  },
  "dependencies": {
      "lite-server": "^2.6.1"
  }
}